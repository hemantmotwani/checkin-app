{
    "version": 2,
    "env": {
        "VITE_BACKEND_URL": "https://checkin-app-five.vercel.app/"
    },
    "builds": [
      {
        "src": "ui/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "service/src/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "service/src/index.js"
      },
      {
        "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json))",
        "dest": "ui/dist/$1"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ]
  }
