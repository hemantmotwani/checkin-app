{
    "version": 2,
    "builds": [
      {
        "src": "ui/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "ui/dist"
        }
      },
      {
        "src": "service/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/checkin",
        "dest": "service/src/index.js"
      },
      {
        "src": "/dashboard",
        "dest": "service/src/index.js"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/ui/dist/assets/$1"
      },
      {
        "src": "/dashboard.html",
        "dest": "/ui/dist/dashboard.html"
      },
      {
        "src": "/(.*)",
        "dest": "/ui/dist/index.html"
      }
    ]
  }
