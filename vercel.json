{
    "version": 2,
    "env": {
        "VITE_BACKEND_URL": "https://checkin-app-five.vercel.app/"
    },
    "builds": [
      {
        "src": "ui/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "service/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/checkin",
        "dest": "service/src/index.js"
      },
      {
        "src": "/dashboard",
        "dest": "service/src/index.js"
      },
      {
        "src": "/assets/(.*)",
        "dest": "ui/dist/assets/$1"
      },
      {
        "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|json))",
        "dest": "ui/dist/$1"
      },
      {
        "src": "/dashboard.html",
        "dest": "ui/dist/dashboard.html"
      },
      {
        "src": "/(.*)",
        "dest": "ui/dist/index.html"
      }
    ]
  }
