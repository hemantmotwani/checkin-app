{
    "version": 2,
    "env": {
        "VITE_BACKEND_URL": "https://checkin-app-six.vercel.app/"
    },
    "builds": [
      {
        "src": "ui/src/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "service/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/checkin",
        "dest": "service/src/index.js"
      },
      {
        "src": "/dashboard",
        "dest": "service/src/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "ui/src/public/$1"
      }
    ]
  }
